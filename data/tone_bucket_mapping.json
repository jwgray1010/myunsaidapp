      },
      "premiumOnly": false
    },
    "caution": {
      "confidenceThreshold": 0.2,
      "intensityFactor": 1.1,
      "categories": ["worry", "uncertainty", "jealousy", "comparison"],
      "suggestionBuckets": [
        { "id": "validation_prompt", "weight": 0.35 },
        { "id": "gentle_reconnect", "weight": 0.25 },
        { "id": "clarity_request", "weight": 0.2 }
      ],
      "attachmentOverrides": {
        "anxious": [{ "id": "reassurance", "weight": 0.4 }],
        "avoidant": [{ "id": "autonomy_respect", "weight": 0.25 }],
        "disorganized": [{ "id": "containment", "weight": 0.3 }],
        "secure": [{ "id": "reframe_positive", "weight": 0.25 }]
      },
      "contextBoosts": {
        "insecurity": { "reassurance": 0.2 },
        "comparison": { "validation_prompt": 0.1 }
