        "disorganized": [{ "id": "validation_prompt", "weight": 0.25 }],
        "secure": [{ "id": "expansion", "weight": 0.3 }]
      },
      "contextBoosts": {
        "repair": { "affirmation": 0.15 },
        "praise": { "gratitude": 0.1 }
      },
      "premiumOnly": true
    }
