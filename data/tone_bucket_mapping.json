      "rewriteStyles": ["add_question", "invite_deeper"]
    },
    "secure_fix": {
      "description": "Default secure attachment rewrite bucket",
      "adviceTags": ["secure", "balanced"],
      "rewriteStyles": ["direct_secure_fix"]
    }
  }
}