    "alert": {
      "confidenceThreshold": 0.25,
      "intensityFactor": 1.2,
      "categories": ["conflict", "rupture", "anger", "shutdown"],
      "suggestionBuckets": [
        { "id": "deescalation", "weight": 0.4 },
        { "id": "repair_language", "weight": 0.35 },
        { "id": "pause_before_reply", "weight": 0.25 }
      ],
      "attachmentOverrides": {
        "anxious": [
          { "id": "self_soothing", "weight": 0.3 },
          { "id": "clarity_request", "weight": 0.2 }
        ],
        "avoidant": [
          { "id": "validation_prompt", "weight": 0.25 },
          { "id": "gentle_reconnect", "weight": 0.25 }
        ],
        "disorganized": [
          { "id": "grounding", "weight": 0.3 },
          { "id": "repair_language", "weight": 0.3 }
        ],
        "secure": [
          { "id": "direct_repair", "weight": 0.35 },
          { "id": "clarity_request", "weight": 0.15 }
